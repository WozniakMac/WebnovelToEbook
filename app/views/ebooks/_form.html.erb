
<%= simple_form_for(@ebook) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :webnovel_id, collection: Webnovel.all, prompt: "Select webnovel", :input_html => { data: { reflex: "change->WebnovelSelector#select" } }%>
    <%= f.input :title, placeholder: "Put here webnovel title" %>
    <%= f.input :urls, label: "Urls (max #{Ebook::URLS_LIMIT})", input_html: { rows: 10 }, placeholder: "https://some.webnovel.example.com/chapter-1\nhttps://some.webnovel.example.com/chapter-2" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
