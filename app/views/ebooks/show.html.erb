<div class="container">
  <div class="mt-1 mb-1">
    <div class="progress">
      <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
    </div>
  </div>
  <div class="mt-1 mb-1">
    <button type="button" class="btn btn-primary btn-lg btn-block">Generate ebook</button>
  </div>
  <div class="alert alert-danger" role="alert">
    Please check all details below
  </div>

  <div class="d-flex justify-content-between">
    <h3>
      <%= @ebook.title %>
      <span class="badge badge-secondary"><%= @ebook.status.humanize %></span>
    </h3>

    <% if @ebook.created? %>
      <%= link_to 'Cancel', ebook_path, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>

  <p>
    <strong>Urls:</strong>
  </p>

  <ul>
    <% @ebook.urls.split("\n").each do |url| %>
      <li>
        <%= link_to url, url %>
      </li>
    <% end %>
  </ul>
</div>